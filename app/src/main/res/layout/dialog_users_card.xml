<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog.users.card.user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/colorBlack"
        android:padding="8dp"
        android:textSize="20sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog.users.card.user_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image_user_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/dialog.users.card.follow_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/ic_add_user"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/dialog.users.card.send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/ic_send_message"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorBlack"/>

        <ImageButton
            android:id="@+id/dialog.users.card.about_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:src="@drawable/ic_user_info"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

</LinearLayout>