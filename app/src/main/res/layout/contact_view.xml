<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    >

    <com.google.firebase.udacity.thezechat.utils.CustomImageView
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:id="@+id/ImageProfile"
        android:src="@drawable/image_user_default"
        />

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NomContact"
            android:text="@string/default_name"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DernierTxt"
            android:text="@string/last_conversation_summary"
            android:textColor="@color/colorGrey"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Date"
        android:text="@string/last_contact_time"
        />

</LinearLayout>